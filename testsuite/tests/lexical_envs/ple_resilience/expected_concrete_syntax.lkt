grammar FooGrammar {
    defs <- list+(def_rule)
    name <- or(
        | Prefix(name "." Id(@Identifier))
        | Id(@Identifier)
    )
    @main_rule main_rule <- defs
    def_rule <- or(scope | var)
    var <- Var(Id(@Identifier) "=" name)
    scope <- Scope(
        HasError("error") Id(@Identifier) "{" defs "}"
    )

}

@root_node class FooNode {
}

@abstract class DefNode : FooNode {
}

class Scope : DefNode {
    @parse_field error : HasError
    @parse_field name : Id
    @parse_field defs : ASTList[DefNode]
}

class Var : DefNode {
    @parse_field name : Id
    @parse_field value : Name
}

@abstract @qualifier class HasError : FooNode {

    ## Return whether this is an instance of HasErrorPresent
    @export fun as_bool (): Boolean
}

@abstract class Name : FooNode {

    @export fun resolve (): FooNode
}

class Id : Name {

    fun resolve (): FooNode = node.node_env.get(node, only_first=true)
}

class Prefix : Name {
    @parse_field prefix : Name
    @parse_field suffix : Id

    fun resolve (): FooNode =
    node.prefix.resolve.children_env.get(node.suffix.symbol, only_first=true)
}

struct EnvAssoc {
    key : SymbolType
    value : FooNode
    dest_env : LexicalEnv
    metadata : Metadata
}
