@spacing(alphanumericals, alphanumericals)
lexer foo_lexer {

    whitespace <- p"[ \n\r\t]+"

    family alphanumericals {
        def <- "def"
    }

    var <- "var"

    family alphanumericals {
        error <- "error"
        example <- "example"
        null_tok <- "null"
    }

    comma <- ","
    dot <- "."
    semicolon <- ";"
    l_par <- "("
    r_par <- ")"
    l_brace <- "{"
    r_brace <- "}"
    equal <- "="
    plus <- "+"
    minus <- "-"
    less_than <- "<"

    family alphanumericals {
        number <- p"[0-9]+"
        @symbol identifier <- p"[a-zA-Z_][a-zA-Z0-9_]*"
    }

    string <- p"\"[^\"]*\""
    @newline_after comment <- p"#(.?)+"
}
grammar foo_grammar {
    @main_rule main_rule <- list+(or(var_decl | fun_decl))
    var_decl <- VarDecl("var" identifier)
    fun_decl <- FunDecl("def" identifier)
    identifier <- Identifier(@identifier)

}

@root_node class FooNode {
}

@abstract class Decl : FooNode {
    @parse_field name : Identifier

    @export fun prop (arg : Boolean = false): Boolean = arg

    fun prop (arg : Boolean = false): Boolean
}

class FunDecl : Decl {
}

class VarDecl : Decl {

    fun prop (arg : Boolean = false): Boolean = not arg
}

class Identifier : FooNode {
}
