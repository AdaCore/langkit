# Check that node synthetization fails as expected when the Self.Self_Env is a
# foreign env.

from lexer_example import foo_lexer

@with_lexer(foo_lexer)
grammar foo_grammar {
    @main_rule main_rule <- list*(block)
    block <- or(
        | DefBlock("def" id "{" "}")
        | RegularBlock(id "{" "}")
    )
    id <- Identifier(@Identifier)
}

@abstract
class FooNode implements Node[FooNode] {
}

class DefBlock: FooNode {
    @parse_field id: Identifier

    env_spec {
        add_env(names=[node.id.symbol])
    }
}

class Identifier: FooNode implements TokenNode {
}

class RegularBlock: FooNode {
    @parse_field id: Identifier

    @exported
    @lazy
    synth: SynthNode = SynthNode(id=node.id)

    env_spec {
        set_initial_env(
            DesignatedEnv(
                kind=DesignatedEnvKind.named_env,
                env_name=node.id.symbol,
                direct_env=null[LexicalEnv]
            )
        )
    }
}

@synthetic
class SynthNode: FooNode {
    @parse_field id: Identifier
}
