lexer foo_lexer {

    char
    dot <- "."
    id <- p"[a-zA-Z]+"
    tick <- "'"
    newline <- p"\n"

    match p"'.'" {
        if previous_token is id then send(tick, 1)
        else send(char, 3)
    }
}
grammar foo_grammar {
    @main_rule expr <- or(
        | DotExpr(expr "." name)
        | AttrRef(expr "'" name)
        | char_lit
        | name
    )
    char_lit <- CharLit(@char)
    name <- Name(@id)

}

@root_node class FooNode {
}

@abstract class Expr : FooNode {
}

class AttrRef : Expr {
    @parse_field prefix : Expr
    @parse_field name : Name
}

@token_node class CharLit : Expr {
}

class DotExpr : Expr {
    @parse_field prefix : Expr
    @parse_field suffix : Name
}

@token_node class Name : Expr {
}
