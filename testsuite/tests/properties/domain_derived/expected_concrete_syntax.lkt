@spacing(alphanumericals, alphanumericals)
lexer foo_lexer {

    @text whitespace <- p"[ \n\r\t]+"

    family alphanumericals {
        @text def <- "def"
    }

    @text var <- "var"

    family alphanumericals {
        @text error <- "error"
        @text example <- "example"
        @text null_tok <- "null"
    }

    @text comma <- ","
    @text dot <- "."
    @text semicolon <- ";"
    @text l_par <- "("
    @text r_par <- ")"
    @text l_brace <- "{"
    @text r_brace <- "}"
    @text equal <- "="
    @text plus <- "+"
    @text minus <- "-"
    @text less_than <- "<"

    family alphanumericals {
        @text number <- p"[0-9]+"
        @symbol identifier <- p"[a-zA-Z_][a-zA-Z0-9_]*"
    }

    @text string <- p"\"[^\"]*\""
    @newline_after @text comment <- p"#(.?)+"
}
grammar foo_grammar {
    name <- Name(@identifier)
    @main_rule main_rule <- ASTList[FooNode]+(or(Definition("def"
    name) | name), ",")

}

@root_node class FooNode {
}

class Definition : FooNode {
    @parse_field name : Name
}

class Name : FooNode {
    ref_var : LogicVar

    @export fun resolve (): Boolean =
    %domain(node.ref_var, node.node_env.get(node).map((d) => d.to[Definition])).solve

    @export fun definition (): Definition =
    node.ref_var.get_value.to[Definition]
}

struct EnvAssoc {
    key : SymbolType
    value : FooNode
    dest_env : LexicalEnv
    metadata : Metadata
}
