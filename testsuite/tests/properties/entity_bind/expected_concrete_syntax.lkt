@spacing(alphanumericals, alphanumericals)
lexer foo_lexer {

    whitespace <- p"[ \n\r\t]+"

    family alphanumericals {
        def <- "def"
    }

    var <- "var"

    family alphanumericals {
        error <- "error"
        example <- "example"
        null_tok <- "null"
    }

    comma <- ","
    dot <- "."
    semicolon <- ";"
    l_par <- "("
    r_par <- ")"
    l_brace <- "{"
    r_brace <- "}"
    equal <- "="
    plus <- "+"
    minus <- "-"
    less_than <- "<"

    family alphanumericals {
        number <- p"[0-9]+"
        @symbol identifier <- p"[a-zA-Z_][a-zA-Z0-9_]*"
    }

    string <- p"\"[^\"]*\""
    @newline_after comment <- p"#(.?)+"
}
grammar foo_grammar {
    @main_rule main_rule <- Literal(@number)

}

@root_node class FooNode {

    @export fun prop (): Int

    fun prop (): Int
}

class Literal : FooNode {
    var : LogicVar

    fun a (): FooNode

    fun b (): LogicEquation = %eq(node.var, node.a)

    @export fun public_prop (): Literal = {
        val _ = node.b;

        node.as_bare_entity
    }

    fun a (): FooNode
}
