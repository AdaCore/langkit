# Test getting the analysis unit of a node in the properties DSL

from lexer_example import foo_lexer

@with_lexer(foo_lexer)
grammar foo_grammar {
    @main_rule main_rule <- or(Plus(atom "+" main_rule) | atom)
    atom <- Literal(@Number)
}

@abstract
class FooNode implements Node[FooNode] {
    @exported
    fun root_node(): Entity[FooNode] = node.unit.root.as_bare_entity
}

@abstract
class Expression: FooNode {
}

class Literal: Expression implements TokenNode {
}

class Plus: Expression {
    @parse_field left: Literal
    @parse_field right: Expression
}
