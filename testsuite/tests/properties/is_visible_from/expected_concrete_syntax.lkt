import lexer_example

@with_lexer(foo_lexer)
grammar foo_grammar {
    @main_rule main_rule <- Scope+(name)
    name <- Name(@identifier)
}

@abstract class FooNode implements Node[FooNode] {
    @exported fun prop(empty1: Bool, empty2: Bool): Bool = {
        val arg1 = if empty1 then null[LexicalEnv[FooNode]] else node.children_env();
        val arg2 = if empty2 then null[LexicalEnv[FooNode]] else node.children_env();

        arg1.is_visible_from(arg2)
    }
}

class Scope: ASTList[FooNode, Name] {
    env_spec {
        add_env()
    }
}

@has_abstract_list class Name: FooNode implements TokenNode {
    env_spec {
        add_to_env_kv(node.symbol, node)
        add_env()
    }
}
