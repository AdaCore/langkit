# Combine never_absent/maybe_absent with failing pre/post tokens reconciliation

from common_field_combine import Assoc, Name
from lexer_example import foo_lexer

@with_lexer(foo_lexer)
@with_unparsers
grammar foo_grammar {
    @main_rule main_rule <- or(
        | Assoc("(" ":" name "=" name ")")
        | Assoc("(" ?(name "=") name ")")
    )
    name <- Name(@Identifier)
}
