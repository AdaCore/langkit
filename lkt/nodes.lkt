|" Function declaration.
class FunDecl: UserValDecl {
    @parse_field
    syn_name: DefId
    @parse_field
    params: ASTList[FunParamDecl]
    @parse_field
    return_type: TypeRef
    @nullable
    @parse_field
    trait_ref: DotExpr
    @parse_field
    @nullable
    body: Expr

    fun decl_type_name(): String = "function declaration"

    fun owning_type(): TypeDecl =
        node.parents().find((t) => t is TypeDecl).as[TypeDecl]

    |" When this property is called by a LogicCallExpr, return whether it
    |" expects a dynamic number of arguments. In other words, it expects an
    |" array of entities as its first argument.
    @exported
    fun is_dynamic_combiner(): Bool = {
        val array_type = self.params.at(0)?.get_type();

        array_type?.node == self.array_type().node
            and array_type?.get_array_content_type().node
                == self.entity_type().node
    }

    fun xref_equation(): Equation =
        if self.body.is_null then %true
        else
            (
                self.body.xref_equation()
                %and self.body.expected_type_var
                <- self.return_type.referenced_decl()
            )
            %and {
                bind error_location = node.body;
                TypeDecl.matching_type%(
                    self.body.expected_type_var,
                    self.body.actual_type_var
                )
            }

    |" Build and return a FunctionType corresponding to the current FunDecl.
    fun function_type_aux(): Entity[FunctionType] =
        self.function_type_helper(
            self.params.map((a) => a.get_type()),
            self.return_type.referenced_decl(),
            self
        )

    env_spec {
        add_to_env_kv(self.name(), node)
        add_env()
        # Add node & self if there is an owning type
        add_all_to_env(
            node.owning_type().do(
                (ot) =>
                [
                    EnvAssoc(
                        key=s"self",
                        value=ot.self_decl(),
                        dest_env=DesignatedEnv(
                            kind=DesignatedEnvKind.current_env,
                            env_name=null[Symbol],
                            direct_env=null[LexicalEnv]
                        ),
                        metadata=null[Metadata]
                    ),
                    EnvAssoc(
                        key=s"node",
                        value=ot.node_decl(),
                        dest_env=DesignatedEnv(
                            kind=DesignatedEnvKind.current_env,
                            env_name=null[Symbol],
                            direct_env=null[LexicalEnv]
                        ),
                        metadata=null[Metadata]
                    )
                ]
            )
        )
    }

    fun find_all_overrides_helper(
        current_node: Entity[LktNode]
    ): Array[Entity[FunDecl]] =
        if current_node.as[FunDecl].do((f) =>
            f.syn_name.symbol == self.syn_name.symbol
            and not f.owning_type().as_entity
                     ?.common_ancestor(self.owning_type().as_entity).is_null
        )
        then current_node.as[FunDecl].singleton()
        else current_node.children.mapcat(
            (child) =>
                if child.is_null
                then null[Array[Entity[FunDecl]]]
                else self.find_all_overrides_helper(child)
        )

    |" Return the list of all RefId that refer to this DefId.
    @exported
    fun find_all_overrides(
        units: Array[AnalysisUnit]
    ): Array[Entity[FunDecl]] =
        units.mapcat(
            (unit) => self.find_all_overrides_helper(unit.root.as_entity)
        )

    |" Return a list of all the parent function declarations that ``self``
    |" overrides, including itself.
    fun base_fun_decls(): Array[Entity[FunDecl]] = {
        bind origin = null[Entity[LktNode]];
        self.owning_type()
            .as_entity
            .defined_scope()
            .get(self.name())
            .keep[FunDecl]
    }
}

