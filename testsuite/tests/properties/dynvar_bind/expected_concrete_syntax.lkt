import lexer_example

@with_lexer(foo_lexer)
grammar foo_grammar {
    @main_rule main_rule <- Example(@Example)
}

dynvar dyn_var: Int

@abstract class FooNode implements Node[FooNode] {
}

class Example: FooNode implements TokenNode {
    @with_dynvars(dyn_var) fun add(value: Int): Int = value + dyn_var

    @exported fun next(value: Int): Int = {
        bind dyn_var = 1;

        node.add(value)
    }

    @with_dynvars(dyn_var) fun add_two(): Int = {
        bind dyn_var = dyn_var + 1;

        node.add(1)
    }

    @exported fun next_next(value: Int): Int = {
        bind dyn_var = value;

        node.add_two()
    }
}
