import lexer_example

@with_lexer(foo_lexer)
grammar foo_grammar {
    @main_rule main_rule <- Example(@Example)
}

@abstract class FooNode implements Node[FooNode] {
}

class Example: FooNode implements TokenNode {
    @exported fun new_my_struct(): MyStruct = null[MyStruct]

    @exported fun new_non_empty_struct(): NonEmptyStruct = NonEmptyStruct(
        char_field='X', my_struct_field=null[MyStruct], bigint_field=42b
    )

    @exported fun identity(s: MyStruct): MyStruct = s

    @exported fun get_char(s: NonEmptyStruct): Char = s.char_field

    @exported fun get_big_int(s: NonEmptyStruct): BigInt = s.bigint_field
}

struct MyStruct {
}

struct NonEmptyStruct {
    char_field: Char
    my_struct_field: MyStruct
    bigint_field: BigInt
}
