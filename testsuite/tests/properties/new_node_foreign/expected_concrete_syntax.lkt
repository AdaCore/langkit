import lexer_example

@with_lexer(foo_lexer)
grammar foo_grammar {
    @main_rule main_rule <- list*(block)
    block <- or(
        | DefBlock("def" id "{" "}")
        | RegularBlock(id "{" "}")
    )
    id <- Identifier(@identifier)
}

@abstract class FooNode implements Node[FooNode] {
}

class DefBlock: FooNode {
    @parse_field id: Identifier

    env_spec {
        add_env(names=[node.id.symbol])
    }
}

class Identifier: FooNode implements TokenNode {
}

class RegularBlock: FooNode {
    @parse_field id: Identifier

    @export @lazy synth: SynthNode = SynthNode(id=node.id)

    env_spec {
        set_initial_env(
            DesignatedEnv(
                kind=DesignatedEnvKind.named_env, env_name=node.id.symbol, direct_env=null[LexicalEnv[FooNode]]
            )
        )
    }
}

@synthetic class SynthNode: FooNode {
    @parse_field id: Identifier
}
