@spacing(alphanumericals, alphanumericals)
lexer foo_lexer {

    whitespace <- p"[ \n\r\t]+"

    family alphanumericals {
        def <- "def"
    }

    var <- "var"

    family alphanumericals {
        error <- "error"
        example <- "example"
        null_tok <- "null"
    }

    comma <- ","
    dot <- "."
    semicolon <- ";"
    l_par <- "("
    r_par <- ")"
    l_brace <- "{"
    r_brace <- "}"
    equal <- "="
    plus <- "+"
    minus <- "-"
    less_than <- "<"

    family alphanumericals {
        number <- p"[0-9]+"
        @symbol identifier <- p"[a-zA-Z_][a-zA-Z0-9_]*"
    }

    string <- p"\"[^\"]*\""
    @newline_after comment <- p"#(.?)+"
}
grammar foo_grammar {
    @main_rule main_rule <- list+(or(
        | DefNode("def" identifier "=" number ";")
        | skip(ErrorDef)
    ))
    number <- Number(@number)
    identifier <- Identifier(@identifier)

}

@root_node class FooNode {
}

class DefNode : FooNode {
    @parse_field name : Identifier
    @parse_field value : Number
}

class ErrorDef : FooNode {
}

class Identifier : FooNode {
}

class Number : FooNode {
}
