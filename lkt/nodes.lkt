|" Generic entity declaration.
@rebindable
class GenericDecl: Decl {
    @parse_field
    generic_param_decls: GenericParamDeclList
    @parse_field
    decl: Decl
    @parse_field
    @null_field
    syn_name: DefId

    fun name(): Symbol = node.decl.name()

    |" Return the suffix of the node's image that contains the type parameters.
    fun image_suffix(): String =
        "[" & (
            # When no rebinindings are present, use the generic_param_decls of
            # the GenericDecl to avoid using the environment as for
            # instantiated type parameters: The result would be the same either
            # way.
            if self.info.rebindings.is_null
            then
                ", ".join(self.generic_param_decls.map(
                    (gp) => gp.decl.full_name_internal()
                ))
            else
                ", ".join(self.instantiated_generic_params().map(
                    (gp) => gp.full_name_internal()
                ))
        ) & "]"

    fun generic_params(): Array[Entity[GenericParamTypeDecl]] =
        self.generic_param_decls.map(
            (gfd) => gfd.decl.as[GenericParamTypeDecl]
        )

    fun generic_params_names(): Array[Symbol] =
        self.generic_param_decls.map(
            (gfd) => gfd.decl.as[GenericParamTypeDecl].name()
        )

    fun decl_type_name(): String = "generic " & self.decl.decl_type_name()

    fun instantiated_generic_params(): Array[Entity[TypeDecl]] =
        self.generic_param_decls.map(
            (gfd) => self.children_env.get_first(gfd.decl.name()).as[TypeDecl]
        )

    env_spec {
        add_to_env_kv(self.name(), node)
        add_env()
    }
}

